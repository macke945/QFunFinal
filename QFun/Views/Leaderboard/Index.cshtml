@model QFun.Models.LeaderboardVm.BoardVm


@{
    ViewData["Title"] = "Leaderboard";
}

<h1>
    Poängtabell
</h1>

<table class="table table-striped table table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>
                #
            </th>
            <th>
                Användare
            </th>
            <th>
                Antal röster
            </th>

        </tr>
    </thead>
    <tbody>
        @{int i = 0;}
        @foreach (var user in Model.UserVoteData)
        {


            <tr >
                @{ i++; }
                <td>
                    @i
                </td>
                <td>
                    @user.UserName
                </td>
                <td>
                    @user.Votes
                </td>
            </tr>
        }


    </tbody>
</table>
