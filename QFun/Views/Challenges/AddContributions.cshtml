@model ContributionsVm
<h1>Skapa nytt bidrag</h1>

<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-action="AddContributions">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Image" class="control-label">Bild</label>
                <input asp-for="Image" class="form-control-file" />
                <span asp-validation-for="Image" class="text-danger"></span>
                <div class="text-danger" hidden=@Model.ShowImageError>Bilden är för stor eller inte jpg/gif/png</div>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Beskrivning</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Skapa" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
