@model QFun.Models.HomePageVm.HomeIndexVm


@{
    ViewData["Title"] = "Hem";
}

<div class="text-center">
    <h1 class="display-4">Välkommen</h1>
    <table class="table table-striped table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>
                    Bild
                </th>
                <th>
                    Beskrivning
                </th>
                <th>
                    Gjord av
                </th>
                <th>
                    Röster
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Contributions)
            {


                <tr>
                    <td>
                        <img src="~/images/@Url.Content(item.Path)" alt="Image not loaded" width="200" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.User.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Votes)
                    </td>
                </tr>

            }


        </tbody>
    </table>
</div>
