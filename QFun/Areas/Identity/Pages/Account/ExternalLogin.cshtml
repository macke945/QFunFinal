@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Registrera";
}

<h1>@ViewData["Title"]</h1>
<h4 id="external-login-title">Associera ditt @Model.ProviderDisplayName konto.</h4>
<hr />

<p id="external-login-description" class="text-info">
    Du har skapat ett konto med <strong>@Model.ProviderDisplayName</strong>.
    Skriv in en email för att fortsätta.
</p>

<div class="row">
    <div class="col-md-4">
        <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>Användarnamn</label>
                <input asp-for="Input.UserName" class="form-control" />
                <label>Email</label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Registrera</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
